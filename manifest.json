{
  "manifest_version": 3,
  "name": "Whatsapp Contact Manager Extension",
  "version": "0.1",
  "description": "Extens√£o que envia mensagens via WhatsApp Web a partir de CSV.",
  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Whatsapp Contact Manager Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
      {
          "resources": ["inject.js"],
          "matches": ["https://web.whatsapp.com/*"]
      }
  ]
}